<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/photo_bg">

    <ImageView
        android:id="@+id/upload_photo_iv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_photo_camera_sky"
        />

    <TextView
        android:id="@+id/upload_photo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upload_photo_iv"
        app:layout_constraintStart_toStartOf="@id/upload_photo_iv"
        app:layout_constraintEnd_toEndOf="@id/upload_photo_iv"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/my_font_semibold"
        android:textColor="@color/sky_main"
        android:text="@string/sky_shots"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>