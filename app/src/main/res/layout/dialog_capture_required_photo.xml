<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="@dimen/_180sdp"
    android:background="@drawable/bg_corner_white">

    <TextView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_180sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_160sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/_40sdp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gifImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:text="@string/capture_msg"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/my_font_medium"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/start_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:text="@string/ok"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/my_font_bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:background="@drawable/bg_corner_blue"
        />

</androidx.constraintlayout.widget.ConstraintLayout>